! -----------------------------------------------------------------------------
! GENERAL
! -----------------------------------------------------------------------------
*.PMON: HDMI-1-2
*.SMON: eDP-1-1
*.TERM: urxvt
*.MPDS: /home/risus/.local/run/mpd.socket
*.browser: qutebrowser --enable-webengine-inspector

! -----------------------------------------------------------------------------
! Color theme
! -----------------------------------------------------------------------------
! black
*.color0  : #222222
*.color8  : #333333

! red
*.color1  : #d81b60
*.color9  : #CA407E

! gray
*.color2  : #5F676A
*.color10 : #888888

! green
*.color3  : #2F343F
*.color11 : #95ee8f

! blue
*.color4  : #a8aabd
*.color12 : #FFDCC8

! magenta
*.color5  : #d886f3
*.color13 : #d886f3

! cyan
*.color6  : #6eaafb
*.color14 : #6eaafb

! white
*.color7  : #E8E2DB
*.color15 : #D8DEE8

!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             64x18
URxvt.transparent:          false
URxvt.fading:               0
URxvt.loginShell:           true
URxvt.saveLines:            1000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt*font: xft:Fira Code:style=Light:size=12
URxvt*boldFont: xft:Fira Code:style=Medium:size=12

! Fix font space
URxvt*letterSpace: 0

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          qutebrowser --enable-webengine-inspector

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

!urxvt color scheme:
URxvt*background: #2D2D2D
URxvt*foreground: #F8F8F2

URxvt*colorUL: #86a2b0

! black
URxvt*color0  : #2E3436
URxvt*color8  : #555753
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #A6E22E
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #E6DB74
URxvt*color11 : #75715E
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #66D9EF
! white
URxvt*color7  : #D3D7CF
URxvt*color15 : #EEEEEC

! Keys
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
