! === vars ===
#define $TERM urxvt
#define $BACKGROUND #2f343f
#define $ACCENT #bf616a
#define $TEXT #d8dee8
#define $WARNING #ebcb8b

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
! rofi.color-enabled: true
! rofi.color-window: #510231, #510231, #FF974E
! rofi.color-normal: #510231, #FEE8DA, #510231, #FF974E, #510231
! rofi.color-active: #510231, #FEE8DA, #510231, #FF974E, #510231
! rofi.color-urgent: #510231, #FA6E43, #510231, #FA6E43, #FEE8DA


! black
*.color0  : #2e282e
*.color8  : #403741

! red
*.color1  : #457ac4
*.color9  : #CA407E

! green
*.color2  : #a8aabd
*.color10 : #a8aabd

! yellow
*.color3  : #95ee8f
*.color11 : #95ee8f

! blue
*.color4  : #a8aabd
*.color12 : #FFDCC8

! magenta
*.color5  : #d886f3
*.color13 : #d886f3

! cyan
*.color6  : #6eaafb
*.color14 : #6eaafb

! white
*.color7  : #E8E2DB
*.color15 : #F7EDE2


! Sizes
rofi.width:           60
rofi.columns:         3
rofi.font:            Noto Sans 12
rofi.padding:         18
rofi.bw:              1
rofi.line-margin:     2
rofi.scrollbar-width: 8

! Colors
!                     bg,           fg,     bgalt,        hlbg,         hlfg
rofi.color-normal:    #2f343f,  #d8dee8,  #2f343f,  #2f343f,  #bf616a
!                     bg,           border
rofi.color-window:    #2f343f,  #bf616a
! === endrofi ===
!
!


!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             64x18
URxvt.transparent:          false
URxvt.fading:               0
URxvt.loginShell:           true
URxvt.saveLines:            1000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt*font: xft:Roboto Mono Light for Powerline:style=Light,Regular:size=12
URxvt*boldFont: xft:Roboto Mono for Powerline:style=Bold:size=12,

! Fix font space
URxvt*letterSpace: 0

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          google-chrome

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

!urxvt color scheme:
URxvt*background: #2D2D2D
URxvt*foreground: #F8F8F2

URxvt*colorUL: #86a2b0

! black
URxvt*color0  : #2E3436
URxvt*color8  : #555753
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #A6E22E
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #E6DB74
URxvt*color11 : #75715E
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #66D9EF
! white
URxvt*color7  : #D3D7CF
URxvt*color15 : #EEEEEC

! Keys
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C
